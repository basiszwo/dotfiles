[user]
	name = Stefan Botzenhart
	email = sb@basiszwo.com
  
[apply]
  whitespace = fix

[core]
  autocrlf = input
  whitespace = fix,indent-with-non-tab,trailing-space,-cr-at-eol,space-before-tab

[alias]
  co = checkout
  changes = diff --name-status -r
  sh = git-sh
  st = status
  ci = commit
  br = branch
  df = diff
  lg = log -p
  spull = !git-svn fetch && git-svn rebase
  spush = !git-svn dcommit  

[diff]
  renames = true

[color]
  sh = auto
  status = auto
  branch = auto

[color "sh"]
  branch = yellow reverse
  workdir = blue bold
  dirty = red

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
  
