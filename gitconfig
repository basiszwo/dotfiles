[user]
  name = Stefan Botzenhart
  email = sb@ninjaconcept.com

[apply]
  whitespace = fix

[core]
  autocrlf = input
  whitespace = fix,indent-with-non-tab,trailing-space,-cr-at-eol,space-before-tab

[alias]
  co = checkout
  cob = checkout -b

  br = branch

  st = status

  ci = commit --verbose
  ca = commit --verbose --all
  cia = commit --verbose --amend

  df = diff
  ds = diff --stat
  dc = diff --cached
  changes = diff --name-status -r

  aa = add --all
  ap = add --patch
  wc = whatchanged -p --abbrev-commit --pretty=medium

  l = log --pretty=oneline --abbrev-commit
  ll = log --pretty=oneline --abbrev-commit --max-count=15
  lp = log -p

  # Experimental stuff
  pop = reset --soft HEAD^1
  poph = reset --hard HEAD^1
  review = log -p --max-count=1
  unstage = reset HEAD

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!source ~/.githelpers_gb && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!source ~/.githelpers_gb && pretty_git_log"
  la = !git l --all

[diff]
  renames = true

[color]
  sh = auto
  status = auto
  branch = auto
  diff = auto

[github]
  user = basiszwo

[core]
  quotepath = false

[mergetool]
  keepBackup = true
